<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ikon Back -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="Back Icon"
            android:layout_marginBottom="12dp" />

        <!-- Gambar Laptop -->
        <ImageView
            android:id="@+id/imageDetail"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/laptop1"
            android:contentDescription="Gambar Laptop" />

        <!-- Baris Nama Laptop dan Tombol Wishlist -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp">

            <TextView
                android:id="@+id/textDetailNama"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ASUS Vivobook S14 (S3407C)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/btnWishlist"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_love_outline"
                android:contentDescription="Wishlist Button"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Harga -->
        <TextView
            android:id="@+id/textDetailHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp13.499.000"
            android:textSize="16sp"
            android:textColor="#444444"
            android:layout_marginTop="8dp" />

        <!-- Judul Spesifikasi -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spesifikasi"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="24dp" />

        <!-- Daftar Spesifikasi -->
        <TextView
            android:id="@+id/textDetailSpesifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="4dp"
            android:text="• Intel® Core™ Ultra 5 Processor 225H (up to 4.9 GHz, 16 Threads)\n
• Intel® AI Boost NPU up to 13TOPS\n
• Windows 11 Home\n
• 14.0-inch, WUXGA (1920 x 1200), 16:10, IPS-level Panel\n
• 300nits, 45% NTSC, TÜV Rheinland-certified\n
• 16GB DDR5 on board\n
• 1TB M.2 NVMe™ PCIe® 4.0 SSD\n
• Backlit Keyboard, 1.7mm key-travel\n
• FHD camera with IR dan Windows Hello" />
    </LinearLayout>
</ScrollView>