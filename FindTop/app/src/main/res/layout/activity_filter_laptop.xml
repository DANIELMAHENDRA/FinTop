<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        android:contentDescription="Back"
        android:layout_marginBottom="8dp" />

    <!-- Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="#E5E5E5"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E5E5E5"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/searchBar"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Cari laptop impianmu"
            android:background="@android:color/transparent"
            android:textColorHint="#888888"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search_24dp"
            android:contentDescription="Search" />
    </LinearLayout>

    <!-- Filter Buttons -->
    <!-- Baris pertama: Merk & Pengguna -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/buttonMerk"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Merk"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:backgroundTint="@color/white"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/buttonPengguna"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Pengguna"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="@drawable/filter_button_background" />
    </LinearLayout>

    <!-- Baris kedua: Harga + Keterangan di kanan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/buttonHarga"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="Harga"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:background="@drawable/filter_button_background"
            android:layout_marginEnd="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp 7.000.000 - 10.000.000"
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>



    <!-- Grid Laptop List -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:orientation="horizontal"
        >

        <!-- Card 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/card_bag">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/laptop1"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HP 14 inch Laptop 14-em0167AU"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp9.199.000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/card_bag">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/laptop1"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MSI Modern 14 C12MO 817 857/ Core I5"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp7.999.000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/card_bag">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/laptop1"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Acer Aspire Lite ALI5-71P-51VG"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp.7.715.000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/card_bag">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/laptop1"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vivobook 14 A1404 - A1404VA"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp10.899.000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/card_bag">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/laptop1"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ASUS Vivobook Go I5 OLED (E1504) - E1504FA - OLED351M"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp7.499.000"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:background="@drawable/card_bag">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/laptop1"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hp Vicitus 15.6 inch Laptop 15-ro1888AX, Silver"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingTop="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rp9.958.899"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- Tambahkan card lainnya dengan struktur yang sama -->

    </GridLayout>
</LinearLayout>