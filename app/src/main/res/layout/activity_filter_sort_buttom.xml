<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/closeButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_dashboard_black_24dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Close Filter"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter dan Sortir"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih dari pilihan di bawah ini"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/priceRange1"
            style="@style/PriceRangeStyle"
            android:text="Rp 3.000.000" />

        <TextView
            android:id="@+id/priceRange2"
            style="@style/PriceRangeStyle"
            android:text="Rp 3.000.000 - 5.000.000" />

        <TextView
            android:id="@+id/priceRange3"
            style="@style/PriceRangeStyle"
            android:text="Rp 5.000.000 - 7.000.000" />


        <TextView
            android:id="@+id/priceRange4"
            style="@style/PriceRangeStyle"
            android:text="Rp 7.000.000 - 10.000.000" />


        <TextView
            android:id="@+id/priceRange5"
            style="@style/PriceRangeStyle"
            android:text="Rp 10.000.000 - 15.000.000" />

        <TextView
            android:id="@+id/priceRange6"
            style="@style/PriceRangeStyle"
            android:text="Rp 15.000.000 - 20.000.000" />

        <!-- FIXED: Ubah '>' menjadi &gt; -->
        <TextView
            android:id="@+id/priceRange7"
            style="@style/PriceRangeStyle"
            android:text="&gt; Rp 20.000.000" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih dari rentang"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/editTextMinHarga"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="min"
            android:inputType="number"
            android:background="@drawable/filter_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sampai"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/editTextMaxHarga"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="maks"
            android:inputType="number"
            android:background="@drawable/filter_button_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSimpanFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textColor="@android:color/white"
        android:backgroundTint="#6200EE"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

</LinearLayout>