<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".PenggunaActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Ikon back -->
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:contentDescription="Back Icon"
            android:layout_marginBottom="8dp" />

        <!-- Baris teks Halo + ikon notifikasi -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="ExtraText">

            <!-- Teks Halo -->
            <TextView
                android:id="@+id/text_halo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halo, Nafisya"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_alignParentStart="true" />

            <!-- Notifikasi -->
            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_notifications_black_24dp"
                android:contentDescription="Notification Icon" />
        </RelativeLayout>

        <!-- Selamat Datang -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Datang"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Search bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Cari laptop impianmu"
            android:background="@android:color/transparent"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_search_24dp"
            android:contentDescription="Search Icon" />
    </LinearLayout>

    <!-- Filter buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/buttonMerk"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Merk"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonPengguna"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:elevation="2dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Pengguna"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textAllCaps="false" />
    </LinearLayout>

    <!-- Kategori Pengguna -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Kategori Pengguna:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Kontainer kategori yang bisa diklik -->
    <LinearLayout
        android:id="@+id/containerKategori"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:divider="@android:color/darker_gray"
        android:showDividers="middle"
        android:dividerHeight="1dp" />

</LinearLayout>
